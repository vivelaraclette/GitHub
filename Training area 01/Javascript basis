//Test switch-case pour multiple if else
let pingouin = prompt('Quel type de pingouin est tu ?');

switch(pingouin) {
  case 'Gros pingouin':
    console.log('C\'est un gros pingouin bien fat');
    break;
  case 'Petit pingouin':
    console.log('C\'est un tout petit pingouin');
    break;
  case 'Pingouin mutant':
    console.log('ph\'nglui mglw\'nafh Cthulhu R\'lyeh wgah\'nagl fhtagn');
    break;
  default:
    console.log('Ce n\'est pas un pingouin');
    break;
}

//Test Ternary Operator
let fruit = 'prout';

fruit === 'pomme' ? console.log('alors c\'est bien une pomme non ?') : console.log('alors ce n\'est pas une pomme je crois...');

//Logical Operator
let mood = 'sleepy';
let tirednessLevel = 9;
if (mood === 'sleepy' && tirednessLevel > 8) {
  console.log('time to sleep');
} else if
  (mood !== 'sleepy' || tirednessLevel ===5) {
  console.log('not bed time yet');
}

//Eighball
let userName = 'Loic';
userName === '' ? console.log('Aucun prenom n\'a été rentré') : console.log(`Hello ${userName}`);
let userQuestion = 'am I a bear ?';
console.log(`your question is ${userQuestion}`)
let randomNumber = Math.floor(Math.random() * 8);
let eightBall = '';
switch(randomNumber) {
  case 0:
    eightBall = 'It is certain';
    break;
  case 1:
    eightBall = 'It is decidedly so';
    break;
  case 2:
    eightBall = 'Reply hazy try again';
    break;
  case 3:
    eightBall = 'Cannot predict now';
    break;
  case 4:
    eightBall = 'Do not count on it';
    break;
  case 5:
    eightBall = 'My sources say no';
    break;
  case 6:
    eightBall = 'Outlook not so good';
    break;
  case 7:
    eightBall = 'Signs point to yes';
    break;
}
console.log(eightBall);
